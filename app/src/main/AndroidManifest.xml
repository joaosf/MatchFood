<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joao.matchfood">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActLogin"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActCadastro"
            android:label="@string/title_activity_act_cadastro"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActFotos"
            android:label="@string/title_activity_act_fotos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActMenu"
            android:label="@string/title_activity_act_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActChat"
            android:label="@string/title_activity_act_chat"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActConversa"></activity>
    </application>

</manifest>